<section class="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <h2>Mande-nos uma mensagem</h2>

                <form class="contact__form">
                    <div class="form-group">
                        <label for="name">Nome:</label>
                        <input type="text" id="name" class="form-control" name="name" placeholder="Seu nome">
                        <div class="text-help">
                            Preencha este campo
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" class="form-control" name="email" placeholder="Seu email">
                        <div class="text-help">
                            Preencha este campo
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="message">Mensagem:</label>
                        <textarea id="message" class="form-control" name="message" placeholder="Seu mensagem" cols="30" rows="10"></textarea>
                        <div class="text-help">
                            Preencha este campo
                        </div>
                    </div>

                    <button type="button" class="btn btn-primary">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</section>